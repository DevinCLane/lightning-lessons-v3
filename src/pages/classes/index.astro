---
import guitar from "../../images/guitar.jpg";
import Layout from "../../layouts/Layout.astro";
import Card from "../../components/Card.astro";
---
<Layout>
    <div class="flex flex-col justify-center my-30 gap-4 px-4">
        <div class="flex flex-col gap-4 w-full max-w-md mx-auto">
            <h1 class="text-4xl font-bold">Classes</h1>
            <p class="text-lg">
                Check out our upcoming classes
            </p>
        </div>
        <div class="flex flex-col gap-4 w-full max-w-md mx-auto">
            <a href="/classes/write-a-song-using-music-theory"><Card title="Write a song using music theory" description="Learn music theory fundamentals in an applied way: write a song" image={guitar} imageAlt="Card Image"/></a>
        </div>
    </div>
</Layout>
