---

const { title, description, link, linkText, class: className } = Astro.props;
---

<div class={`hero flex-1 flex items-center justify-center ${className}`}>
  <div class="hero-content text-center">
    <div class="max-w-md">
      <p class="text-5xl font-bold">{title}</p>
      <p class="py-6">
        {description}
      </p>
      <a href={link}><button class="btn btn-primary">{linkText}</button></a>
    </div>
  </div>
</div>