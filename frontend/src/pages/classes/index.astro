---
import ab from "../../images/ab-avatar.avif";
import Layout from "../../layouts/Layout.astro";
import Card from "../../components/Card.astro";
---

<Layout>
    <div class="flex flex-col mx-4">
        <div class="max-w-md mx-auto w-full mb-8">
            <h1 class="text-4xl font-bold mb-2">Classes</h1>
            <p class="text-lg">Check out our upcoming classes</p>
        </div>
        <div class="flex flex-col w-full max-w-md mx-auto">
            <a href="/classes/write-a-song-using-music-theory"
                ><Card
                    title="Write a song using music theory"
                    description="Learn music theory fundamentals in an applied way: write a song"
                    image={ab}
                    imageAlt="Card Image"
                /></a
            >
        </div>
    </div>
</Layout>
